{
  "name": "template4ts",
  "version": "1.0.0",
  "description": "Typescript - Project template.",
  "type": "module",
  "main": "dist/module/index.js",
  "typings": "dist/module/index.d.ts",
  "keywords": [
    "javascript",
    "typescript",
    "package",
    "es6",
    "node",
    "module"
  ],
  "license": "MIT",
  "author": "Nkwati Divine <drnkwati+github@gmail.com> (https://github.com/drnkwati)",
  "homepage": "https://github.com/dnkwati/template4ts#readme",
  "bugs": {
    "url": "https://github.com/dnkwati/template4ts/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dnkwati/template4ts.git"
  },
  "scripts": {
    "dev": "(rm -rf ./dev) && (./node_modules/.bin/tsc --outDir dev/module -w) & (if [ \"$(which serve)\" ]; then serve ./; fi)",
    "dist": "(rm -rf ./dist) && ./node_modules/.bin/tsc & (./node_modules/.bin/esbuild src/index.ts --outfile=dist/bundle.js --bundle --minify)"
  },
  "devDependencies": {
    "esbuild": "latest",
    "npm-dts": "latest",
    "typescript": "latest"
  }
}
